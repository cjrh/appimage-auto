[Unit]
Description=AppImage Auto-Integration Daemon
Documentation=https://github.com/caleb/appimage-auto
After=graphical-session.target

[Service]
Type=simple
ExecStart=%h/.cargo/bin/appimage-auto daemon
Restart=on-failure
RestartSec=5

# Security hardening
NoNewPrivileges=true
ProtectSystem=full
PrivateTmp=true

[Install]
WantedBy=default.target
